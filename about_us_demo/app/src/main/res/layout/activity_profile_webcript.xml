<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header_background_webcript"
    >

    <RelativeLayout
        android:id="@+id/ConcernedPortionofScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dip"
                android:layout_marginBottom="60dp"
                android:background="@drawable/header_background_webcript"
                android:backgroundTint="#3e95b2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dip"
                    android:weightSum="5"
                    android:layout_centerHorizontal="true"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip"
                        android:layout_weight="1"
                        android:src="@drawable/ic_chevron_left_black_24dp"
                        android:tint="@color/white"
                        android:clickable="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PROFILE"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:textSize="20sp"

                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="30dip"
                        android:src="@drawable/ic_edit_black_24dp"
                        android:tint="@color/white"
                        android:clickable="true"/>
                </LinearLayout>

            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/pic2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="bottom|center_horizontal"
                 />

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RestofScreen"
        android:layout_below="@+id/ConcernedPortionofScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/lin_form"
            android:layout_marginTop="40dip"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rel_name"
                android:padding="20dip"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/cell_margin_left_right_webcript"
                android:layout_marginRight="@dimen/cell_margin_left_right_webcript"
                android:background="@drawable/edit_text_background_webcript"
                android:layout_marginBottom="20dip">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Name Here"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="@dimen/cell_margin_left_right_webcript"
                android:layout_marginRight="@dimen/cell_margin_left_right_webcript"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rel_voice_call"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:padding="20dip"
                    android:layout_marginRight="12dip"
                    android:background="@drawable/edit_text_background_webcript">

                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_call_black_24dp"
                        android:tint="@color/white"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rel_video_call"
                    android:layout_weight="1"
                    android:padding="20dip"
                    android:layout_marginLeft="12dip"
                    android:clickable="true"
                    android:background="@drawable/edit_text_background_webcript">

                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_videocam_black_24dp"
                        android:tint="@color/white"/>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rel_phone_number"
                android:layout_weight="1"
                android:padding="20dip"
                android:clickable="true"
                android:layout_marginLeft="@dimen/cell_margin_left_right_webcript"
                android:layout_marginRight="@dimen/cell_margin_left_right_webcript"
                android:background="@drawable/edit_text_background_webcript">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>