<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zain.about_us_demo.ShippingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_ship_address_details"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_edt_name"
            android:text="Shaheryar"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_edt_name"
            android:id="@+id/tv_edt_phone"
            android:text="10281074102"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_edt_phone"
            android:id="@+id/tv_edt_address"
            android:text="house 2 street 4  "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_edt_city"
            android:text="Lahore "
            android:layout_below="@+id/tv_edt_phone"
            android:layout_toEndOf="@+id/tv_edt_address"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Punjab "
            android:id="@+id/tv_edt_state"
            android:layout_below="@+id/tv_edt_phone"
            android:layout_toEndOf="@+id/tv_edt_city"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_edt_country"
            android:text="Pakistan"
            android:layout_below="@+id/tv_edt_phone"
            android:layout_toEndOf="@+id/tv_edt_state"/>


    </RelativeLayout>

<!--edit address button-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rel_btn_edit"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:background="@color/snap_wall_primary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Shipping Address"
            android:id="@+id/tv_edit_address"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="15sp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_toRightOf="@+id/tv_edit_address"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />


    </RelativeLayout>

</RelativeLayout>
