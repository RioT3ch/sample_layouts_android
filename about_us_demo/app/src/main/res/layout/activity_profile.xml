<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zain.about_us_demo.ProfileActivity">

    <!--profiepic section-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/rel_profile_pic">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img_profile_pic"
            android:src="@drawable/back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left"
            />

    </RelativeLayout>

    <view
        android:layout_below="@+id/rel_profile_pic"
        style="@style/divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_profile_pic"
        android:id="@+id/rel_profile_data">

        <!--first name-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel_first_name">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_first_name"
                android:text="First Name"
                android:layout_marginTop="@dimen/tv_margin_top_bottom"
                android:layout_marginLeft="@dimen/margin_left"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_first_name_2"
                android:layout_below="@+id/tv_first_name"
                android:text="Shaheryar"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/tv_margin_top_tv"
                android:textSize="@dimen/profile_text_size"
                android:layout_marginBottom="@dimen/tv_margin_top_bottom"/>
        </RelativeLayout>

        <!--Last name-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel_last_name"
            android:layout_below="@+id/rel_first_name">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_last_name"
                android:text="Last Name"
                android:layout_marginTop="@dimen/tv_margin_top_bottom"
                android:layout_marginLeft="@dimen/margin_left"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_last_name_2"
                android:layout_below="@+id/tv_last_name"
                android:text="Tariq"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/tv_margin_top_tv"
                android:textSize="@dimen/profile_text_size"
                android:layout_marginBottom="@dimen/tv_margin_top_bottom"/>
        </RelativeLayout>

        <!--Phone number-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel_phone_number"
            android:layout_below="@+id/rel_last_name">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_phone_number"
                android:text="Phone No."
                android:layout_marginTop="@dimen/tv_margin_top_bottom"
                android:layout_marginLeft="@dimen/margin_left"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_phone_number_2"
                android:layout_below="@+id/tv_phone_number"
                android:text="+92321 1237971"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/tv_margin_top_tv"
                android:textSize="@dimen/profile_text_size"
                android:layout_marginBottom="@dimen/tv_margin_top_bottom"/>
        </RelativeLayout>

        <!--Email-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel_email"
            android:layout_below="@id/rel_phone_number">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_email"
                android:text="Email"
                android:layout_marginTop="@dimen/tv_margin_top_bottom"
                android:layout_marginLeft="@dimen/margin_left"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_email_2"
                android:layout_below="@+id/tv_email"
                android:text="abc23@gmail.com"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginTop="@dimen/tv_margin_top_tv"
                android:textSize="@dimen/profile_text_size"
                android:layout_marginBottom="@dimen/tv_margin_top_bottom"/>
        </RelativeLayout>

        <!--password-->



    </RelativeLayout>

</RelativeLayout>


