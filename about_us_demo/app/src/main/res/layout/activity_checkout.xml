<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zain.about_us_demo.checkout">

    //line on left side
    <View
        android:layout_width="3dp"
        android:id="@+id/view_line"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/rel_shipping"
        android:layout_marginLeft="15dp"
        android:background="@color/green"
        android:layout_marginTop="25dp" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/ic_location_on_black_24dp"
        app:civ_circle_background_color="@color/green"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/circleImageView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:civ_fill_color="@color/green"
        android:layout_alignTop="@+id/rel_payment"
        android:src="@drawable/ic_attach_money_black_24dp"
        android:layout_marginLeft="8dp" />
    //shipping section
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_shipping">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping"
            android:id="@+id/tv_shipping"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Name"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:id="@+id/edt_name"
            android:textAlignment="textStart"
            android:layout_below="@+id/tv_shipping"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/box"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Phone"
            android:paddingLeft="10dp"
            android:id="@+id/edt_phone"
            android:textAlignment="textStart"
            android:textSize="15sp"
            android:layout_below="@+id/edt_name"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/box"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Address"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:id="@+id/edt_address"
            android:textAlignment="gravity"
            android:layout_below="@+id/edt_phone"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/box"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin_1"
            android:layout_below="@id/edt_address"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/edt_country"
                android:layout_weight="1"
                android:hint="Country"
                android:layout_marginRight="5dp"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:background="@drawable/box"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:id="@+id/edt_zipcode"
                android:hint="Zip-Code"
                android:paddingLeft="10dp"
                android:background="@drawable/box"/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="City"
            android:paddingLeft="10dp"
            android:id="@+id/edt_city"
            android:textSize="15sp"
            android:textAlignment="gravity"
            android:layout_below="@+id/lin_1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/box"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="State/Province"
            android:paddingLeft="10dp"
            android:id="@+id/edt_state"
            android:textSize="15sp"
            android:textAlignment="gravity"
            android:layout_below="@+id/edt_city"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/box"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"/>
        </RelativeLayout>
    //payment section
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel_payment"
            android:layout_below="@id/rel_shipping"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_payment"
                android:text="Payment"
                android:textStyle="bold"
                android:textSize="18sp"
                />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:id="@+id/edt_card_type"
                android:layout_below="@+id/tv_payment"
                android:hint="Card Type"
                android:paddingLeft="10dp"
                android:background="@drawable/box"
                android:layout_marginTop="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/edt_card_name"
                android:layout_below="@+id/edt_card_type"
                android:hint="Name on Card"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:background="@drawable/box"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_person_black_24dp"
                android:paddingRight="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/edt_card_number"
                android:layout_below="@+id/edt_card_name"
                android:hint="Card Number"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:background="@drawable/box"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_credit_card_black_24dp"
                android:paddingRight="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_card_number"
                android:id="@+id/lin_2"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:id="@+id/edt_exp_date"
                    android:hint="Expire date"
                    android:textSize="15sp"
                    android:background="@drawable/box"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:layout_marginRight="5dp"
                    android:drawableRight="@drawable/ic_date_range_black_24dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:id="@+id/edt_cvv"
                    android:hint="CVV"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/box"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"/>
            </LinearLayout>
        </RelativeLayout>
    //submit button
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/cv_submit"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple2"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit Order"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:id="@+id/tv_submit_order"
                    android:textColor="#ffffff"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_done_black_24dp"
                    android:layout_toEndOf="@+id/tv_submit_order"
                    android:backgroundTint="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout>
