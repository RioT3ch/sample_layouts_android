<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zain.about_us_demo.EditAddressActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_shipping"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping"
            android:id="@+id/tv_shipping"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Name"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:id="@+id/edt_name"
            android:textAlignment="textStart"
            android:layout_below="@+id/tv_shipping"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Phone"
            android:paddingLeft="10dp"
            android:id="@+id/edt_phone"
            android:textAlignment="textStart"
            android:textSize="15sp"
            android:layout_below="@+id/edt_name"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Address"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:id="@+id/edt_address"
            android:textAlignment="gravity"
            android:layout_below="@+id/edt_phone"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin_1"
            android:layout_below="@id/edt_address"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/edt_country"
                android:layout_weight="1"
                android:hint="Country"
                android:layout_marginRight="5dp"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:background="@drawable/box"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:id="@+id/edt_zipcode"
                android:hint="Zip-Code"
                android:paddingLeft="10dp"
                android:background="@drawable/box"/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="City"
            android:paddingLeft="10dp"
            android:id="@+id/edt_city"
            android:textSize="15sp"
            android:textAlignment="gravity"
            android:layout_below="@+id/lin_1"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="State/Province"
            android:paddingLeft="10dp"
            android:id="@+id/edt_state"
            android:textSize="15sp"
            android:textAlignment="gravity"
            android:layout_below="@+id/edt_city"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"/>
    </RelativeLayout>

    <!--save button-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rel_btn_save"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:background="@color/snap_wall_primary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Address"
            android:id="@+id/tv_save_address"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="15sp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_toRightOf="@+id/tv_save_address"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />


    </RelativeLayout>

</RelativeLayout>
